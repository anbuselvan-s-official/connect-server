generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  mobile     String   @unique
  user_name  String?  @unique
  public_key Bytes?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  device_id  String   @unique @default(uuid())

  RefreshToken RefreshToken[]
  SignedPreKey SignedPreKey[]

  OneTimePreKey OneTimePreKey[]

  Profile Profile[]

  alice_conversation Conversation[] @relation("alice")
  bob_conversation Conversation[] @relation("bob")
}

model Conversation {
  id String @id @default(uuid())
  alice_id String
  bob_id String
  last_message_at DateTime @default(now())
  created_at DateTime @default(now())

  alice User @relation("alice", fields: [alice_id], references: [id])
  bob User @relation("bob", fields: [bob_id], references: [id])

  @@unique([alice_id, bob_id])
  @@index([alice_id, last_message_at])
  @@index([bob_id, last_message_at])
}

model RefreshToken {
  id         String   @id @default(uuid())
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())
  revoked    Boolean  @default(false)

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model SignedPreKey {
  id         String   @id @default(uuid())
  public_key Bytes
  signature  Bytes
  expires_at DateTime

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model OneTimePreKey {
  id         Int     @id @default(autoincrement())
  key_id     String  @unique
  public_key Bytes
  is_used    Boolean @default(false)

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Profile {
  id           Int       @id @default(autoincrement())
  user_id      String
  display_name String?
  bio          String?
  age          Int?
  avatar_url   String?
  gender       String?
  interest     String?
  last_seen    DateTime?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
